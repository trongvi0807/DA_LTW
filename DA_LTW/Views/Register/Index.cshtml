@model DA_LTW.Models.RegisterViewModel
@{
    Layout = null;
    ViewBag.Title = "Đăng ký tài khoản";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        :root {
            --primary-color: #20c997; /* Xanh ngọc */
            --primary-hover-color: #1aa982;
        }

        body {
            background-color: #f8f9fa;
        }

        .btn-custom {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            color: #fff;
        }

            .btn-custom:hover {
                background-color: var(--primary-hover-color);
                border-color: var(--primary-hover-color);
                color: #fff;
            }

        .text-custom {
            color: var(--primary-color);
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(32, 201, 151, 0.25);
        }

        a {
            color: var(--primary-color);
            text-decoration: none;
        }

            a:hover {
                color: var(--primary-hover-color);
            }

        .register-container {
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center register-container">
            <div class="col-md-8 col-lg-7 col-xl-5">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body p-4 p-md-5">
                        <div class="text-center mb-4">
                            <i class="bi bi-person-plus-fill fs-1 text-custom"></i>
                            <h3 class="mt-2 fw-bold text-custom">Tạo Tài Khoản Mới</h3>
                            <p class="text-muted">Nhanh chóng và dễ dàng.</p>
                        </div>

                        @using (Html.BeginForm("Register", "Register", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                            <div class="form-floating mb-3">
                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Họ và tên", required = "required" })
                                @Html.LabelFor(m => m.FullName)
                            </div>

                            <div class="form-floating mb-3">
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Số điện thoại", required = "required" })
                                @Html.LabelFor(m => m.PhoneNumber)
                            </div>

                            <div class="form-floating mb-3">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "name@example.com", type = "email", required = "required" })
                                @Html.LabelFor(m => m.Email)
                            </div>

                            <div class="form-floating mb-3">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mật khẩu", required = "required" })
                                @Html.LabelFor(m => m.Password)
                            </div>

                            <div class="form-floating mb-4">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Xác nhận mật khẩu", required = "required" })
                                @Html.LabelFor(m => m.ConfirmPassword)
                            </div>

                            <div class="d-grid">
                                <button class="btn btn-custom btn-lg fw-bold" type="submit">Đăng Ký</button>
                            </div>

                            <div class="text-center mt-4">
                                <p class="text-muted">Đã có tài khoản? <a href="@Url.Action("Index", "Login")">Đăng nhập ngay</a></p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
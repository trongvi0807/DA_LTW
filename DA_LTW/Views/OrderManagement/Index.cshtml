@model IEnumerable<DA_LTW.Models.order>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    /* ====== BẢNG DANH SÁCH ĐƠN HÀNG ====== */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 25px;
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        animation: fadeIn 0.6s ease-in-out;
    }

    thead {
        background: linear-gradient(135deg, #009688, #26a69a);
        color: white;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        thead th {
            padding: 14px 16px;
            font-size: 14px;
            font-weight: 600;
            text-align: left;
        }

    tbody td {
        padding: 12px 16px;
        border-bottom: 1px solid #eee;
        font-size: 15px;
        color: #333;
    }

    tbody tr:nth-child(even) {
        background: #f9f9f9;
    }

    tbody tr:hover {
        background: #e0f2f1;
        transform: scale(1.01);
        transition: all 0.2s ease-in-out;
    }

    /* ====== NÚT HÀNH ĐỘNG ====== */
    a {
        color: #009688;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s ease;
    }

        a:hover {
            color: #004d40;
            text-decoration: underline;
        }

    /* ====== HIỆU ỨNG CHO TIÊU ĐỀ ====== */
    h2 {
        color: #004d40;
        margin-bottom: 10px;
        font-size: 22px;
        border-left: 4px solid #009688;
        padding-left: 10px;
        animation: fadeIn 0.8s ease;
    }

    /* ====== ANIMATION ====== */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
<h2>Danh sách đơn hàng</h2>
<table>
    <thead>
        <tr>
            <th>Mã đơn </th>
            <th>Khách hàng </th>
            <th>Ngày đặt </th>
            <th>Trạng thái </th>
            <th>Tổng tiền </th>
            <th>Hành động </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.full_name</td>
                <td>@(item.order_date != null ? item.order_date.Value.ToString("dd/MM/yy") : "")</td>
                <td>@item.status</td>
                <td>@item.total_money</td>
                <td>
                    @Html.ActionLink("Chi tiết", "Details", "OrderManagement", new { id = @item.id }, null)
                </td>
            </tr>
        }
    </tbody>
</table>
<p>@Html.ActionLink("← Quay lại danh sách", "Index")</p>
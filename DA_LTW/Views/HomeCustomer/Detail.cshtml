@model DA_LTW.ViewModels.ProductDetailViewModel
@{
    ViewBag.Title = Model.Product.name;
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";

    // Lấy thông tin user đăng nhập để kiểm tra hiển thị form comment
    var currentUser = Session["User"] as DA_LTW.Models.user;
}

@functions {
    // Helper format tiền tệ
    public static string FormatPrice(decimal value)
    {
        return value.ToString("N0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) + "₫";
    }

    // Helper hiển thị HTML ngôi sao (Frontend only)
    public static string RenderStars(double rating)
    {
        string html = "";
        int fullStars = (int)rating;
        bool hasHalfStar = (rating - fullStars) >= 0.5;

        for (int i = 1; i <= 5; i++)
        {
            if (i <= fullStars)
            {
                html += "<i class='fa-solid fa-star text-warning'></i>"; // Sao vàng
            }
            else if (i == fullStars + 1 && hasHalfStar)
            {
                html += "<i class='fa-solid fa-star-half-stroke text-warning'></i>"; // Sao nửa (nếu muốn support)
            }
            else
            {
                html += "<i class='fa-regular fa-star text-muted'></i>"; // Sao rỗng
            }
        }
        return html;
    }
}

<style>

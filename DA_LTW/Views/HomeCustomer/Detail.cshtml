        color: #374151;
    }

    .product-long-details {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        width: 100%;
    }

    .tabs {
        border-bottom: 1px solid #d1d5db;
        margin-bottom: 20px;
    }

    .tab-link {
        background: none;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        font-size: 16px;
        margin-bottom: -1px;
        border-bottom: 3px solid transparent;
    }

        .tab-link.active, .tab-link:hover {
            color: #20c997;
            border-bottom-color: #20c997;
            font-weight: 500;
        }

    .tab-content {
        display: none;
        line-height: 1.7;
        color: #374151;
    }

        .tab-content h2 {
            font-size: 20px;
            margin-bottom: 15px;
        }

    .ingredients-table {
        width: 100%;
        border-collapse: collapse;
    }

        .ingredients-table th, .ingredients-table td {
            border: 1px solid #e5e7eb;
            padding: 10px 12px;
            text-align: left;
        }

        .ingredients-table th {
            background-color: #f9fafb;
        }

    /* --- CSS MỚI CHO PHẦN COMMENT/REVIEW --- */
    .text-warning {
        color: #ffc107 !important;
    }
    /* Màu vàng cho sao */
    .text-muted {
        color: #d1d5db !important;
    }
    /* Màu xám cho sao rỗng */

    .rating-overview {
        margin-bottom: 15px;
        font-size: 14px;
        color: #4b5563;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    /* Style cho form đánh giá */
    .comment-form-box {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        border: 1px solid #e9ecef;
        margin-top: 30px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control-custom {
        width: 100%;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        font-family: inherit;
    }

    .btn-submit-review {
        background-color: #20c997;
        color: white;
        border: none;
        padding: 8px 20px;
        border-radius: 4px;
        cursor: pointer;
        font-weight: 600;
    }

    /* Star Rating Input (Radio Button Trick) */
    .star-rating-input {
        display: flex;
        flex-direction: row-reverse; /* Đảo ngược để dùng selector ~ */
        justify-content: flex-end;
        gap: 5px;
    }

        .star-rating-input input {
            display: none;
        }

        .star-rating-input label {
            font-size: 24px;
            color: #d1d5db;
            cursor: pointer;
            transition: color 0.2s;
        }
            /* Khi hover hoặc checked, đổi màu các sao phía trước */
            .star-rating-input input:checked ~ label,
            .star-rating-input label:hover,
            .star-rating-input label:hover ~ label {
                color: #ffc107;
            }

    /* Danh sách comment */
    .comment-list {
        margin-top: 20px;
    }

    .comment-item {
        border-bottom: 1px solid #f1f1f1;
        padding: 20px 0;
        display: flex;
        gap: 15px;
    }

    .comment-avatar {
        width: 45px;
        height: 45px;
        background: #e2e8f0;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #64748b;
        font-weight: bold;
        font-size: 18px;
    }

    .comment-content-area {
        flex: 1;
    }

    .comment-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 5px;
    }

    .user-name {
        font-weight: 600;
        color: #333;
    }

    .verified-badge {
        font-size: 12px;
        color: #059669;
        background: #d1fae5;
        padding: 2px 6px;
        border-radius: 4px;
        margin-left: 5px;
    }

    .comment-date {
        font-size: 13px;
        color: #9ca3af;
    }

    .comment-text {
        color: #4b5563;
        margin-top: 5px;
        line-height: 1.5;
    }

    /* Alert styles */
    .alert {
        padding: 10px 15px;
        border-radius: 4px;
        margin-bottom: 15px;
    }

    .alert-success {
        background-color: #d1fae5;
        color: #065f46;
        border: 1px solid #a7f3d0;
    }

    .alert-danger {
        background-color: #fee2e2;
        color: #991b1b;
        border: 1px solid #fecaca;
    }

    .comment-media-grid {
        display: flex;
        gap: 10px;
        margin-top: 10px;
        flex-wrap: wrap;
    }

    .comment-media-item {
        width: 100px;
        height: 100px;
        border-radius: 6px;
        overflow: hidden;
        border: 1px solid #eee;
        cursor: pointer;
        position: relative;
    }

        .comment-media-item img,
        .comment-media-item video {

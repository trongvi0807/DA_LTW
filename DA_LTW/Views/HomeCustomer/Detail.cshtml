</style>

<div class="product-detail-container">
    <div class="product-gallery">
        <div class="main-image-container">
            <img id="mainProductImage" src="@Model.Product.thumbnail_url" alt="@Model.Product.name" />
        </div>
        <div class="thumbnail-list">
            <img src="@Model.Product.thumbnail_url" alt="Thumbnail Main" class="thumbnail-item active" onclick="changeImage(this)" />
            @if (Model.Images != null)
            {
                foreach (var img in Model.Images)
                {
                    <img src="@img.image_url" alt="Thumbnail" class="thumbnail-item" onclick="changeImage(this)" />
                }
            }
        </div>
    </div>

    <div class="product-info">
        <h1 class="product-title">@Model.Product.name</h1>

        <div class="rating-overview">
            <span>@Html.Raw(RenderStars(Model.AverageRating))</span>
            <span>(@Model.TotalReviews đánh giá)</span>
        </div>
        <p class="product-packaging">@Model.Product.packaging_details</p>

        <div class="price-section">
            <span class="current-price">@FormatPrice(Model.Product.sale_price)</span>
            @if (Model.Product.sale_price < Model.Product.original_price)
            {
                <span class="original-price">@FormatPrice(Model.Product.original_price)</span>
            }
        </div>

        <div class="short-description">
            @Html.Raw(Model.Product.description)
        </div>

        <div class="actions">
            <div class="quantity-selector">
                <button type="button" onclick="changeQuantity(-1)">-</button>
                <input type="number" id="quantityInput" value="1" min="1" max="@Model.Product.stock_quantity" readonly>
                <button type="button" onclick="changeQuantity(1)">+</button>
            </div>
            <a href="@Url.Action("AddToCart", "Cart", new { productId = Model.Product.id })" class="btn-add-to-cart">
                <i class="fa-solid fa-cart-plus"></i> Thêm vào giỏ hàng
            </a>
        </div>
        <div class="stock-info">
            Tồn kho: <strong>@Model.Product.stock_quantity</strong> sản phẩm
        </div>
    </div>
</div>

<div class="product-long-details">
    <div class="tabs">
        <button class="tab-link active" onclick="openTab(event, 'Description')">Mô tả chi tiết</button>
        <button class="tab-link" onclick="openTab(event, 'Ingredients')">Thành phần</button>
        <button class="tab-link" onclick="openTab(event, 'Dosage')">Liều dùng & Cách dùng</button>
        <button class="tab-link" onclick="openTab(event, 'Contraindications')">Chống chỉ định</button>
        <button class="tab-link" onclick="openTab(event, 'Reviews')">Đánh giá (@Model.TotalReviews)</button>
    </div>

    <div id="Description" class="tab-content" style="display: block;">
        <h2>Thông tin chi tiết sản phẩm</h2>
        @Html.Raw(Model.Product.content)
    </div>

    <div id="Ingredients" class="tab-content">
        <h2>Thành phần của @Model.Product.name</h2>
        @if (Model.IngredientsList != null && Model.IngredientsList.Any())
        {
            <table class="ingredients-table">
                <thead><tr><th>Thành phần</th><th>Hàm lượng</th></tr></thead>
                <tbody>
                    @foreach (var item in Model.IngredientsList)
                    {
                        <tr><td>@item.name</td><td>@item.amount @item.unit</td></tr>
                    }
                </tbody>
            </table>
        }
        else
        { <p>Thông tin thành phần đang được cập nhật.</p>}
    </div>

    <div id="Dosage" class="tab-content">
        <h2>Liều dùng & Cách dùng</h2>
        @Html.Raw(Model.Product.dosage)
    </div>

    <div id="Contraindications" class="tab-content">
        <h2>Chống chỉ định</h2>
        @Html.Raw(Model.Product.contraindications)
    </div>

    <div id="Reviews" class="tab-content">
        <h2>Đánh giá khách hàng</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <div class="comment-form-box">
            @if (currentUser != null)
            {
                <h4 style="margin-top:0; margin-bottom: 15px;">Viết nhận xét của bạn</h4>
                using (Html.BeginForm("AddComment", "HomeCustomer", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.NewComment.ProductId)

                    <div class="form-group">
                        <label style="font-weight: 500; display:block; margin-bottom:5px;">Bạn chấm sản phẩm này mấy sao?</label>
                        <div class="star-rating-input">
                            <input type="radio" id="star5" name="NewComment.Rating" value="5" /><label for="star5" title="Tuyệt vời"><i class="fa-solid fa-star"></i></label>
                            <input type="radio" id="star4" name="NewComment.Rating" value="4" /><label for="star4" title="Tốt"><i class="fa-solid fa-star"></i></label>
                            <input type="radio" id="star3" name="NewComment.Rating" value="3" /><label for="star3" title="Bình thường"><i class="fa-solid fa-star"></i></label>
                            <input type="radio" id="star2" name="NewComment.Rating" value="2" /><label for="star2" title="Tệ"><i class="fa-solid fa-star"></i></label>
                            <input type="radio" id="star1" name="NewComment.Rating" value="1" /><label for="star1" title="Rất tệ"><i class="fa-solid fa-star"></i></label>
                        </div>
                        @Html.ValidationMessageFor(m => m.NewComment.Rating, "", new { @class = "text-danger", @style = "color:red; font-size:12px;" })
                    </div>

                    <div class="form-group">
                        <label style="font-weight: 500;">Nội dung đánh giá:</label>
                        @Html.TextAreaFor(m => m.NewComment.Content, new { @class = "form-control-custom", rows = "3", placeholder = "Chia sẻ cảm nhận..." })
                    </div>

                    <div class="form-group">
                        <div class="upload-btn-wrapper">
                            <button class="btn-upload" type="button">
                                <i class="fa-solid fa-camera"></i> Thêm ảnh/video
                            </button>
                            <input type="file" name="NewComment.UploadImages" id="fileInput" multiple accept="image/*,video/*" onchange="previewFiles()" />
                        </div>
                        <div id="preview-area"></div>
                    </div>

                    <button type="submit" class="btn-submit-review">Gửi đánh giá</button>
                }
            }
            else
            {
                <div style="text-align: center; color: #666;">
                    Bạn cần <a href="@Url.Action("Login", "Login", new { returnUrl = Request.Url.PathAndQuery })" style="color: #20c997; font-weight: bold;">đăng nhập</a> để viết đánh giá.
                </div>
            }
        </div>

        <div class="comment-list">
            @if (Model.Comments != null && Model.Comments.Any())
            {
                foreach (var comment in Model.Comments)
                {
                    <div class="comment-item">
                        <div class="comment-avatar">
                            @(comment.user.full_name.Length > 0 ? comment.user.full_name.Substring(0, 1).ToUpper() : "U")
                        </div>
                        <div class="comment-content-area">
                            <div class="comment-header">
                                <div>
                                    <span class="user-name">@comment.user.full_name</span>
                                    @if (comment.is_verified_purchase == true)
                                    {
                                        <span class="verified-badge" title="Người dùng đã mua sản phẩm này"><i class="fa-solid fa-check"></i> Đã mua</span>
                                    }
                                </div>
                                <span class="comment-date">@comment.created_at.Value.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div style="margin-bottom: 5px;">
                                @Html.Raw(RenderStars(comment.rating ?? 0))
                            </div>

                            <div class="comment-text">
                                @comment.content
                            </div>

                            @if (comment.comment_medias != null && comment.comment_medias.Any())
                            {
                                <div class="comment-media-grid">
                                    @foreach (var media in comment.comment_medias)
                                    {
                                        if (media.media_type == "image")
                                        {
                                            <div class="comment-media-item" onclick="window.open('@media.media_url', '_blank')">
                                                <img src="@media.media_url" alt="Review image" loading="lazy" />
                                            </div>
                                        }
                                        else if (media.media_type == "video")
                                        {
                                            <div class="comment-media-item">
                                                <video controls>
                                                    <source src="@media.media_url" type="video/mp4">
                                                    Trình duyệt không hỗ trợ video.
                                                </video>
                                            </div>
                                        }
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <p style="text-align: center; margin-top: 20px; color: #999;">Chưa có đánh giá nào. Hãy là người đầu tiên!</p>
            }
        </div>
    </div>
</div>

@section scripts {
    <script>
        function changeImage(thumbnailElement) {
            document.getElementById('mainProductImage').src = thumbnailElement.src;
            document.querySelectorAll('.thumbnail-item').forEach(item => item.classList.remove('active'));
            thumbnailElement.classList.add('active');
        }
        function changeQuantity(amount) {
            const input = document.getElementById('quantityInput');
            let value = parseInt(input.value);
            const max = parseInt(input.max);
            if (value + amount >= 1 && value + amount <= max) {
                input.value = value + amount;
            }
        }
        function openTab(evt, tabName) {
            // Ẩn tất cả tab content
            var tabContents = document.getElementsByClassName("tab-content");
            for (var i = 0; i < tabContents.length; i++) {
                tabContents[i].style.display = "none";
            }

            // Bỏ active class ở tất cả tab link
            var tabLinks = document.getElementsByClassName("tab-link");
            for (var i = 0; i < tabLinks.length; i++) {
                tabLinks[i].className = tabLinks[i].className.replace(" active", "");
            }

            // Hiện tab được chọn và thêm class active
            document.getElementById(tabName).style.display = "block";
            evt.currentTarget.className += " active";
        }

        function previewFiles() {
            var preview = document.getElementById('preview-area');
            var files = document.getElementById('fileInput').files;

            // Xóa preview cũ (nếu muốn logic chọn đè, hoặc bạn có thể làm logic nối thêm)
            preview.innerHTML = '';

            if (files) {
                [].forEach.call(files, function (file) {
                    var reader = new FileReader();

                    reader.readAsDataURL(file);

                    reader.onloadend = function () {
                        var div = document.createElement("div");
                        div.className = "preview-item";

                        if (file.type.startsWith("image/")) {
                            var img = document.createElement("img");
                            img.src = reader.result;
                            div.appendChild(img);
                        } else if (file.type.startsWith("video/")) {
                            var video = document.createElement("video");
                            video.src = reader.result;
